@using DA_TT_Share.Models

@{
    ViewData["Title"] = "DanhSachNguoiDung";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<NguoiDung> lstnguoiDung = ViewBag.lstKH as List<NguoiDung>;

}

<h1>Danh Sách Khách Hàng</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="tb_khachHang">
    <thead>
        <tr>
            <th>
                Avatar
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Email
            </th>
            <th>
                Sô Điện Thoại
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in lstnguoiDung)
        {
            <tr>

                <td>
                    <img src="~/img/@item.Image" style="min-width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
object-fit: cover;">
                </td>
                <td>
                    @item.HoTen
                </td>
                @if (item.GioiTinh == 1)
                {
                    <td>
                        Nam
                    </td>
                }
                @if (item.GioiTinh != 1)
                {
                    <td>
                        Nữ
                    </td>
                }

                <td>
                    @item.Email
                </td>
                <td>
                    @item.SoDienThoai
                </td>
                @if (@item.TrangThai == 1)
                {
                    <td>
                        Còn Hoạt Động
                    </td>
                }
                else
                {
                    <td>
                        Tạm Khóa
                    </td>
                }


                <td>
                    <a asp-action="KhachHangDetail" asp-controller="DonHangAdmin" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16"><path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" /><path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" /></svg>
                    </a>
                    <a asp-action="UpdateKhachHang" asp-controller="DonHangAdmin" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="fa-solid fa-pen-nib"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@*Link datatable*@
<link href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />


<script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        // Khởi tạo DataTable
        var dataTable = $('#tb_khachHang').DataTable();
    });
</script>
